{
	"compilerOptions": {
		"target": "es6",
		"jsx": "react",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"rootDir": "./src",
		"outDir": "./build",
		"strict": true,
		"noImplicitAny": true,
		"declaration": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.scss"],
	"exclude": ["node_modules"]
}
