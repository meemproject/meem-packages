{
	"git.ignoreLimitWarning": true,
	"javascript.validate.enable": false,
	"editor.formatOnSave": true,
	"files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/build/**": true,
		"**/node_modules/**": true,
		"**/.next/**": true
	},
	"search.exclude": {
		"**/build/**": true,
		"**/node_modules/**": true,
		"**/.next/**": true
	},
	"eslint.enable": true,
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	"[javascript]": {
		"editor.formatOnSave": false
	},
	"[javascriptreact]": {
		"editor.formatOnSave": false
	},
	"[typescript]": {
		"editor.formatOnSave": false
	},
	"[typescriptreact]": {
		"editor.formatOnSave": false
	},
	"[handlebars]": {
		"editor.formatOnSave": false
	},
	"eslint.options": {
		"extensions": [
			".js",
			".jsx",
			".ts",
			".tsx"
		]
	},
	// "eslint.workingDirectories": [
	// 	{"directory": "packages/api", "changeProcessCWD": true},
	// 	{"directory": "packages/react", "changeProcessCWD": true},
	// 	{"directory": "packages/utils", "changeProcessCWD": true}
	// ],
	"eslint.workingDirectories": [
		"packages/api",
		"packages/react",
		"packages/utils",
		"packages/market-contracts",
		"packages/meem-contracts",
		"packages/meem-id-contracts"
	],
	"typescript.tsdk": "node_modules/typescript/lib",
	"typescript.preferences.importModuleSpecifier": "relative",
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	}
}